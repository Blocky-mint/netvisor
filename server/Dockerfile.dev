FROM lukemathwalker/cargo-chef:latest-rust-1.85 AS chef
WORKDIR /app

FROM chef AS planner
COPY . .
RUN cargo chef prepare --recipe-path recipe.json

FROM chef AS builder
COPY --from=planner /app/recipe.json recipe.json
# Build dependencies only (not the final binary)
RUN cargo chef cook --recipe-path recipe.json

# Install cargo-watch for hot reload
RUN cargo install cargo-watch

FROM debian:bookworm-slim AS runtime
RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    build-essential \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy cargo binaries including cargo-watch
COPY --from=builder /usr/local/cargo /usr/local/cargo
ENV PATH="/usr/local/cargo/bin:${PATH}"

WORKDIR /app

EXPOSE 60072

HEALTHCHECK --interval=10s --timeout=5s --retries=5 \
    CMD curl -f http://localhost:60072/api/health || exit 1

# Use cargo-watch to rebuild on file changes
CMD ["sh", "-c", "mkdir -p /data && touch /data/netvisor.db && cargo watch -x 'run --bin server'"]